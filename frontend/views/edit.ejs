<!DOCTYPE html>
<html lang="en">
	<%- include ('partial/head') %> 
	<body style="background-color: #1b1b1b;">
		<!-- Start Navbar -->
		<%- include ('partial/navbar') %>
		<!-- End Navbar -->
		
		<!-- Start Main -->
		<section class="main ">
			<div class="container">
				<h1 class="mt-5 user__main-title text-white">Edit</h1>
				<main class="form-signin">
					<form action="/edit/<%= data.uuid %> " method="POST">
						<div class="form-floating">
							<label for="floatingInput" class="mt-3 text-white ">Name</label>
							<input type="text" class="form-control" id="name" name="name" placeholder="Name" value="<%= data.name %> "/>
						</div>
						<div class="form-floating">
							<label for="floatingInput" class="mt-2 text-white">Email address</label>
							<input type="email" class="form-control" id="email" name="email" placeholder="name@example.com" value="<%= data.email %> "/>
						</div>
						<div class="form-floating mb-3">
							<label for="floatingPassword" class="mt-2 text-white">Password</label>
							<input type="password" class="form-control" id="password" name="password" placeholder="Password" />
						</div>
						<div class="p mb-2 text-white">
							Role
						</div>
						<div class="form-check d-inline mr-3">
							<input class="form-check-input" type="radio" name="role" id="role" value="PlayerUser">
							<label class="form-check-label text-light" for="flexRadioDefault1">
							  Player User
							</label>
						  </div>
						  <div class="form-check d-inline">
							<input class="form-check-input" type="radio" name="role" id="role" value="SuperAdmin">
							<label class="form-check-label text-light" for="flexRadioDefault2">
							  Super Admin
							</label>
						  </div>
						<div class="button-group mt-3">
							<button href='/' class="btn btn-submit mb-2 mt-2 text-center">Submit</button>
							<a href="/" class="btn btn-back mb-2 mt-2 text-center">Back</a>
						</div>
					</form>
				</main>
			</div>
		</section>

	</body>
</html>
